<Window x:Class="Quiz2.Question3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz2"
        mc:Ignorable="d"
        Title="Question3" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="First">
                <StackPanel Margin="200,100">
                    <Label FontSize="20"  Content="Click on me ..."></Label>
                    <CheckBox x:Name="clicShowTab2" Unchecked="clickShowTab2_Unchecked" Checked="clicShowTab2_Checked" Content="Show tab 2">
                    </CheckBox>
                </StackPanel>
            </TabItem>
            <TabItem x:Name="tab2" Header="Seconde" Visibility="Hidden"></TabItem>
        </TabControl>
    </Grid>
</Window>
